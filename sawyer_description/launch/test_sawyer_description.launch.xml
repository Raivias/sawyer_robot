 <!-- Note: This launch file is used to test the URDF and Meshes
      PLEASE - DO NOT launch this while networked against
      a real Sawyer robot. It will crash the onboard
      robot_state_publisher, and you will need to reboot
      your robot for it to function properly again -->
<launch>
 <!-- Load the URDF into the ROS Parameter Server -->
 <!-- <let name="urdf_model" value="$(exec-in-pkg xacro xacro) $(find-pkg-share sawyer_description)/urdf/sawyer.urdf.xacro electric_gripper:=true"/> -->

 <node name="test_robot_state_publisher" pkg="robot_state_publisher" exec="robot_state_publisher" output="screen" args="">
      <param name="robot_description" value="$(exec-in-pkg xacro xacro) -i $(find-pkg-share sawyer_description)/urdf/sawyer.urdf.xacro electric_gripper:=true"/>
 </node>

 <node name="test_joint_state_publisher" pkg="joint_state_publisher" exec="joint_state_publisher" output="screen" args="_use_gui:=true"/>

 <node pkg="tf2_ros" exec="static_transform_publisher" name="test_base_to_world" args="0 0 0 0 0 0 1 world base" />

 <!-- <node name="test_robot_state_publisher" exec="robot_state_publisher" pkg="robot_state_publisher" output="screen"/> -->

 <node name="rviz2" pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share sawyer_description)config/sawyer.rviz" />
</launch>
